{
  "name": "@johnlindquist/mac-panel-window",
  "author": "John Lindquist (https://johnlindquist.com)",
  "license": "ISC",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "description": "A native macOS panel window for Node.js - v1 branch",
  "main": "index.cjs",
  "module": "index.js",
  "exports": {
    "import": "./index.js",
    "require": "./index.cjs",
    "default": "./index.cjs"
  },
  "source": "index.ts",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "binding.gyp",
    "index.d.ts",
    "panel-window.mm",
    "build/**/*"
  ],
  "type": "module",
  "devDependencies": {
    "@types/node": "^20.12.7",
    "electron": "^30.0.1",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.20.2",
    "node-abi": "^3.67.0",
    "node-gyp": "^10.1.0",
    "semantic-release": "^23.0.8",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^8.0.0"
  },
  "scripts": {
    "build-gyp": "node-gyp rebuild",
    "build-esm": "esbuild index.ts --bundle --platform=node --packages=external --target=node18 --format=esm --outfile=index.js",
    "build-cjs": "esbuild index.ts --bundle --platform=node --target=node18 --format=cjs --packages=external  --outfile=index.cjs",
    "build-d.ts": "tsc index.ts --emitDeclarationOnly -d",
    "build": "npm run build-gyp && npm run build-esm && npm run build-cjs && npm run build-d.ts",
    "electron-rebuild": "npm run build && electron-rebuild -e ~/dev/kitapp/node_modules/electron",
    "test": "node test/test.js"
  },
  "os": [
    "darwin"
  ],
  "release": {
    "branches": [
      "+([0-9]).x",
      "main",
      "next",
      {
        "name": "v1",
        "range": "1.x"
      },
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm"
    ]
  }
}
